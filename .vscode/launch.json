{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ExactDiagonalization (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/ExactDiagonalization.exe",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "externalConsole": true,
      "preLaunchTask": "Build ExactDiagonalization",
      "environment": [
        { "name": "PATH", "value": "C:/msys64/mingw64/bin;${env:PATH}" }
      ],
      "setupCommands": [
        { "description": "Enable pretty-printing", "text": "-enable-pretty-printing" }
      ]
    }
  ]
}
